{
  "compilerOptions": {
    "target": "es5",
    "strict": false, // TODO
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["config/*"],
      "@scripts/*": ["src/assets/scripts/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"],
    },
    "allowSyntheticDefaultImports": true
  }
}
